@{
}

@model IEnumerable<string>

<div class="d-grid gap-2">
    <a asp-controller="Home" asp-action="Index" asp-route-category="" asp-route-pageNum="1" class="btn btn-outline-secondary btn-group-vertical w-50">Home</a><br />

    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-category="@t" asp-route-pageNum="1"
           class="btn btn-group-vertical @(ViewBag.SelectedType == t ? "btn-primary" : "btn-outline-secondary") w-50">@t</a>
    }
</div>

@*//I put in the w-100 in to fix an error. It's a good trick to know now*@
